# Common cli stuff
alias ls="ls -N --color"
alias grep="grep --color=auto"
alias sudo="sudo "
alias adios="shutdown now"
alias nv="nvim "
alias tmux="tmux -2"

# rsync
alias prv="rsync -rv --progress --append-verify"
alias rra="rsync -r --append-verify"
alias pra="rsync -r --progress --append-verify"

# Git
alias groot="git rev-parse --show-toplevel"
alias gg="git grep "
alias cdg='cd "$(git rev-parse --show-toplevel)"'
alias gc="git commit"
alias gca="git commit -a"
alias ga="git add"
alias gs="git status"
alias gd="git diff"
alias gp="git push"
alias gco="git checkout"
alias glog="git log"
